<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.restaurant"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="21" />

    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:targetPackage="com.example.restaurant" >
    </instrumentation>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_picture"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <uses-library android:name="android.test.runner" />

        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.UserTableActivity"
            android:label="@string/title_activity_user_table" >
        </activity>
        <activity
            android:name=".activity.UserActivity"
            android:label="@string/title_activity_user" >
        </activity>
        <activity
            android:name=".activity.EvaluationActivity"
            android:label="@string/title_activity_evaluation" >
        </activity>
        <activity
            android:name=".activity.ChefActivity"
            android:label="@string/title_activity_chef" >
        </activity>
        <activity
            android:name=".activity.DishesInOrderActivity"
            android:label="@string/title_activity_dishes_in_order" >
        </activity>
        <activity
            android:name=".activity.WaiterActivity"
            android:label="@string/title_activity_waiter" >
        </activity>
        <activity
            android:name=".activity.DishActivity"
            android:label="@string/title_activity_dish" >
        </activity>
        <activity
            android:name=".activity.ManagerActivity"
            android:label="@string/title_activity_manager" >
        </activity>
        <activity
            android:name=".activity.RestaurantActivity"
            android:label="@string/title_activity_restaurant" >
        </activity>
        <activity
            android:name=".activity.StaffActivity"
            android:label="@string/title_activity_stuff" >
        </activity>
        <activity
            android:name=".activity.CleanerActivity"
            android:label="@string/title_activity_cleaner" >
        </activity>
        <activity
            android:name="com.example.restaurant.activity.MyDishesActivity"
            android:label="@string/title_activity_my_dishes" >
        </activity>
    </application>

</manifest>