<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <RadioGroup
        android:id="@+id/rg_chef_3"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F2F2F2">

        <RadioButton 
            android:id="@+id/rb1_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:gravity="center_vertical"
            android:checked="true"
            android:text="特色"
            android:textSize="16dp"
            android:textColor="@drawable/chef_bottom_text"
            android:background="@drawable/chef_left_bg"
            android:padding="10dp"/>
        
        <View 
        	android:layout_width="match_parent"
        	android:layout_height="1px"
        	android:background="#898989"/>
        
        <RadioButton 
            android:id="@+id/rb2_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:gravity="center_vertical"
            android:text="西餐"
            android:textSize="16dp"
            android:textColor="@drawable/chef_bottom_text"
            android:background="@drawable/chef_left_bg"
            android:padding="10dp"/>
         <View 
        	android:layout_width="match_parent"
        	android:layout_height="1px"
        	android:background="#898989"/>
        <RadioButton 
            android:id="@+id/rb3_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:gravity="center_vertical"
            android:text="主食"
            android:textSize="16dp"
            android:textColor="@drawable/chef_bottom_text"
            android:background="@drawable/chef_left_bg"
            android:padding="10dp"/>
        <View 
        	android:layout_width="match_parent"
        	android:layout_height="1px"
        	android:background="#898989"/>
        <RadioButton 
            android:id="@+id/rb4_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:gravity="center_vertical"
            android:text="面食"
            android:textSize="16dp"
            android:textColor="@drawable/chef_bottom_text"
            android:background="@drawable/chef_left_bg"
            android:padding="10dp"/>
        <View 
        	android:layout_width="match_parent"
        	android:layout_height="1px"
        	android:background="#898989"/>
        <RadioButton 
            android:id="@+id/rb5_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:gravity="center_vertical"
            android:text="甜点"
            android:textSize="16dp"
            android:textColor="@drawable/chef_bottom_text"
            android:background="@drawable/chef_left_bg"
            android:padding="10dp"/>
        <View 
        	android:layout_width="match_parent"
        	android:layout_height="1px"
        	android:background="#898989"/>
        <RadioButton 
            android:id="@+id/rb6_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:gravity="center_vertical"
            android:text="饮料"
            android:textSize="16dp"
            android:textColor="@drawable/chef_bottom_text"
            android:background="@drawable/chef_left_bg"
            android:padding="10dp"/>
        <View 
        	android:layout_width="match_parent"
        	android:layout_height="1px"
        	android:background="#898989"/>
    </RadioGroup>
    
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_chef_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
